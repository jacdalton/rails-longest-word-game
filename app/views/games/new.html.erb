<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>
<ul>
  <% @letters.each do |letter| %>
    <li class='inline'><%= letter %></li>
  <% end %>
</ul>
<form action='/score' method='post'>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
  <input type='text' name='guess' placeholder='Enter guess (i.e. "ROCK", etc...)'>
  <input type='submit' value='Check your guess'>
</form>
